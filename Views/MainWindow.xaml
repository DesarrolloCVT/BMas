<Page x:Class="NuevoBMas.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Diseño Base -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <DockPanel Background="#FF4500" Height="50">
            <Image Source="/Images/Logo_BMas.png" Height="40" VerticalAlignment="Center" Margin="10"/>
            <TextBlock Text="Bienvenidos" Foreground="White" VerticalAlignment="Center" FontSize="24" Margin="10"/>
        </DockPanel>

        <!-- Contenido dinámico -->
        <Frame x:Name="MainFrame" Background="white" NavigationUIVisibility="Hidden" Grid.Row="1" Margin="0,0,625,0"/>
        <Button x:Name="btn_preventa" Content="Preventa" Background="#FF4500" BorderBrush="DarkSlateGray" BorderThickness="3" Foreground="White" HorizontalAlignment="Left" Margin="8,9,0,0" VerticalAlignment="Top" Height="35" Width="155" Grid.Row="1" FontSize="20" Click="Button_Click"/>

    </Grid>
</Page>
